<odoo>
    <data>
        <record id="view_company_form_izibiz" model="ir.ui.view">
            <field name="name">res.company.form.izibiz</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook" position="inside">
                    <!-- Adding İZİBİZ Credentials Page -->
                    <page string="İZİBİZ">
                        <group>
                            <field name="izibiz_username"/>
                            <field name="izibiz_password" password="True"/>
                            <field name="izibiz_application_name"/>
                            <field name="izibiz_base_url"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>